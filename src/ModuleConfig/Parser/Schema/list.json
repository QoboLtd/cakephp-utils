{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "listItem": {
            "title": "List item",
            "description": "A single list item",
            "type": "object",
            "properties": {
                "value": {
                    "title": "Value",
                    "description": "Value to be stored in the database",
                    "type": "string"
                },
                "label": {
                    "title": "Label",
                    "description": "User-friendly label",
                    "type": "string"
                },
                "inactive": {
                    "title": "Inactive",
                    "description": "Whether or not the item is active",
                    "type": "string",
                    "enum": ["", "0", "1"]
                }
            },
            "additionalProperties": false,
            "required": ["value", "label", "inactive"]
        }
    },
    "title": "List configuration",
    "description": "List items configuration",
    "type": "object",
    "properties": {
        "title": "List items",
        "description": "List items list",
        "items": {
            "type": "array",
            "items": {
                "allOf": [
                    { "$ref": "#/definitions/listItem" }
                ]
            },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "additionalProperties": false,
    "required": ["items"]
}
