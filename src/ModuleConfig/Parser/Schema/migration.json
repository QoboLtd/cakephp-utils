{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "booleanString": {
            "title": "Boolean string",
            "description": "Shortcut for defining boolean strings that can be empty or null",
            "oneOf": [
                { "type": "string", "enum": ["", "0", "1"] },
                { "type": "boolean" },
                { "type": "null" }
            ]
        },
        "fieldType": {
            "title": "Field type",
            "description": "Support field types and formats",
            "oneOf": [
                { "type": "string", "enum": ["uuid", "integer", "decimal", "string", "text", "blob", "date", "time", "datetime", "reminder", "boolean", "url", "email", "phone", "files"] },
                { "type": "string", "pattern": "^string\\([0-9]+\\)$" },
                { "type": "string", "pattern": "^decimal\\([0-9]+\\.[0-9]+\\)$" },
                { "type": "string", "pattern": "^related\\([A-Z]+.*\\)$" },
                { "type": "string", "pattern": "^list\\([A-z0-0]+.*\\)$" },
                { "type": "string", "pattern": "^dblist\\([A-z0-0]+.*\\)$" },
                { "type": "string", "pattern": "^sublist\\([A-z0-0]+.*\\)$" },
                { "type": "string", "pattern": "^money\\([A-z0-0]+.*\\)$" },
                { "type": "string", "pattern": "^metric\\([A-z0-0]+.*\\)$" }
            ]
        },
        "migrationField": {
            "title": "Migration field",
            "description": "Representation of a single field from migrations.csv",
            "type": "object",
            "properties": {
                "name": {
                    "title": "Field name",
                    "description": "Database field name",
                    "type": "string",
                    "minLength": 1
                },
                "type": {
                    "title": "Field type",
                    "description": "Database field type (think: field handlers)",
                    "oneOf": [
                        { "$ref": "#/definitions/fieldType" }
                    ]
                },
                "required": {
                    "title": "Required flag",
                    "description": "Defines whether or not the field is required",
                    "oneOf": [
                        { "$ref": "#/definitions/booleanString" }
                    ]
                },
                "non-searchable": {
                    "title": "Searchable flag",
                    "description": "Defines whether or not the field is searchable",
                    "oneOf": [
                        { "$ref": "#/definitions/booleanString" }
                    ]
                },
                "unique": {
                    "title": "Unique flag",
                    "description": "Defines whether or not the field is contains unique value",
                    "oneOf": [
                        { "$ref": "#/definitions/booleanString" }
                    ]
                }
            },
            "additionalProperties": false,
            "required": ["name", "type", "required", "non-searchable", "unique"]
        }
    },
    "title": "CSV migration",
    "description": "CSV migration configuration",
    "type": "object",
    "properties": {},
    "additionalProperties": {
        "allOf": [
            { "$ref": "#/definitions/migrationField" }
        ]
    }
}
